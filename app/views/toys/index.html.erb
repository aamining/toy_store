<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">Filters</div>
        <div class="panel-body">
          <%= form_tag toys_path, method: :get, class: "form-horizontal" do  %>
            <div class="form-group">
              <div class="col-md-6 col-xs-12">
                <%= label_tag "Min Price $" %>
                <%= text_field_tag :min_price, @filter_options[:min_price], placeholder: "5", class: "form-control" %>
              </div>
              <div class="col-md-6 col-xs-12">
                <%= label_tag "Max Price $" %>
                <%= text_field_tag :max_price, @filter_options[:max_price], placeholder: "1000", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-12 col-md-3">
                <%= submit_tag "Filter", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-9 col-xs-12">
      <% if @toys.present? %>
        <div class="panel panel-default">
          <div class="panel-body">
            <% @toys.each do |toy| %>
              <div class="col-xs-12 col-md-6">
                <%= link_to toy_path(toy) do %>
                  <%= image_tag(toy.image_url(:standard), width: 200, height: 200) %>
                  <p><strong><%= toy.name %></strong></p>
                  <p><%= number_to_currency(toy.price) %></p>
                <% end %>
              </div>
            <% end %>

          </div>
        </div>
      <% end %>
      <br>
    </div>
  </div>
</div>
