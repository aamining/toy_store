<div class="col-xs-12">
  <p>
  <strong>Name:</strong>
  <%= @toy.name %>
  </p>

  <p>
  <strong>Price:</strong>
  <%= number_to_currency(@toy.price) %>
  </p>

  <p>
  <strong>Description:</strong>
  <%= @toy.description %>
  </p>
  <% if @toy.image.present? %>
    <p>
    <%= image_tag(@toy.image_url(:standard), width: 200, height: 200) %>
    </p>
  <% end %>

  <% #TODO: only show if not seller %>
  <%= form_for(@order) do |f| %>
    <%= f.hidden_field :toy_id, value: @toy.id %>
    <div class="form-actions">
      <%= f.submit "Buy", class: "btn btn-info" %>
    </div>
  <% end %>

<%= link_to 'Edit', edit_toy_path(@toy) %> |
<%= link_to 'Back', toys_path %>
</div>

